<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:paddingTop="@dimen/recycleritem_padding_vertical"
    android:paddingBottom="@dimen/recycleritem_padding_vertical"
    android:paddingLeft="@dimen/recycleritem_padding_horizontal"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/txt_table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/recycleritem_title_size"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/txt_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/ribbon_padding_large"
        android:paddingRight="@dimen/ribbon_padding_small"
        android:paddingTop="@dimen/ribbon_padding_small"
        android:paddingBottom="@dimen/ribbon_padding_small"
        android:textColor="@android:color/white"
        android:textSize="@dimen/ribbon_text_size"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>