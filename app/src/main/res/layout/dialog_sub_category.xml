<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/dialog_margin"
    android:padding="@dimen/dialog_padding">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_dialog_sub_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <EditText
            android:id="@+id/edit_dialog_sub_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/sub_category"
            android:inputType="textPersonName" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.dev.materialspinner.MaterialSpinner
        android:id="@+id/spinner_sub_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dialog_input_margin_top"
        app:layout_constraintTop_toBottomOf="@id/input_dialog_sub_category" />

</androidx.constraintlayout.widget.ConstraintLayout>